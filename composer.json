{
	"name": "fandasson/bestanswer",
	"type": "phpbb-extension",
	"description": "An extension for phpBB 3.1.x that allows users to mark a post as the 'Best Answer', which will then be quoted in the first post with a link to it.",
	"version": "1.0.1",
	"license": "GPL-2.0",
	"authors": [
		{
			"name": "kinerity",
			"email": "kinerity@yahoo.com",
			"role": "Extension Core Developer"
		},
		{
			"name": "fandasson",
			"role": "Forked version developer"
		}
	],
	"require": {
		"php": ">=5.3.3",
		"composer/installers": "~1.0"
	},
	"extra": {
		"display-name": "Best Answer",
		"soft-require": {
			"phpbb/phpbb": ">=3.1.7"
		}
	}
}
